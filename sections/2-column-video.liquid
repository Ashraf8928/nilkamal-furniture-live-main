<div class="youtube-video">
  <div class="youtube-video__wrapper" ">
    <iframe class="youtube-video__iframe" src="https://www.youtube.com/embed/{{ section.settings.video_id }}?rel=0" frameborder="0" allowfullscreen></iframe>
  </div>
</div>


{% schema %}
{
  "name": "2-column-video",
  "settings": [
    {
      "type": "text",
      "id": "video_id",
      "label": "Video ID",
      "default": "YOUR_VIDEO_ID",
      "info": "Enter the YouTube video ID."
    },
    {
      "type": "range",
      "id": "aspect_ratio",
      "label": "Aspect Ratio",
      "min": 0.1,
      "max": 2.0,
      "step": 0.1,
      "default": 0.5,
      "info": "Adjust the aspect ratio of the video container."
    }
  ],"presets": [{
    "name": "2-column-video"
  }],
  "blocks" : []
}
{% endschema %}


